#:import utils kivy.utils
#Lancador ORIGINAL da vers√£o 4
<Cenario>:
    orientation: 'vertical'

    #bind entre a variavel "bola" (arquivo main.py)
    #com a instancia do objeto da classe Ball  "ball_id" (interface)
    bola: ball_id
    cesta: cesta_id

    canvas.before:
        #Fundo azul
        Color:
            rgb: utils.get_color_from_hex('#eafbfe') 
        Rectangle:
            pos: (self.width-400, self.height-400)
            size: (self.width, self.width)
            source:'./mercurio.jpg'

        #Fundo cinza placar
        Color:
            rgb: utils.get_color_from_hex('#B3B3B3')
        Rectangle:
            pos: 10,500
            size: 65,93
        #Fundo verde placar acertos
        Color:
            rgb: utils.get_color_from_hex('#82B366')
        Rectangle:
            pos: 12,550
            size: 60,40
        #Fundo vermelho placar erros
        Color:
            rgb: utils.get_color_from_hex('#EA6B66')
        Rectangle:
            pos: 12,503
            size: 60,40
       
        #Linha marrom do chao
        Color:
            rgb: utils.get_color_from_hex('#814805')
        Line:
            width: 4.0
            points: self.width-400, self.height-400, self.width, self.height-400

    
    #Layout para colocar a bola e a mensagem de sucesso ou erro
    FloatLayout:
    
        #Instancia um objeto da classe Ball
        Label:
            Bola:
                id: ball_id

        Label:
            Cesta:
                id: cesta_id
                

        #Mensagem de sucesso ou erro
        Label:
            id: mensagem
            pos_hint: {'center_x': 0.5, 'top' : 1.4}
            text:''
            font_size:40
            markup:True

    #Layout do PLACAR
  
    BoxLayout:
        id: param
        size_hint_y: None
        orientation: 'vertical'

    #Placar acertos
        FloatLayout:
            Label:
                size_hint_y: None
                height: 35
                size_hint_x: None
                width: 25
                pos_hint: {'x': 0.07, 'y': 7.3}
                text: 'Acertos:'
                color: 0,0,0,1
            Label:
                id: txAcertos
                size_hint_y: None
                height: 40
                size_hint_x: None
                width: 30
                pos_hint: {'x': 0.07, 'y': 6.8}
                text: '0'
                color: 0,0,0,1
    #Placar Erros
        FloatLayout:
            Label:
                size_hint_y: None
                height: 35
                size_hint_x: None
                width: 25
                pos_hint: {'x': 0.07, 'y': 7.3}
                text: 'Erros:'
                color:0,0,0,1
            Label:
                id: txErros
                size_hint_y: None
                height: 40
                size_hint_x: None
                width: 30
                pos_hint: {'x': 0.07, 'y': 6.8}
                text: '0'
                color:0,0,0,1
            


        
    #Layout de entrada dos parametros
    BoxLayout:
        id: param
        size_hint_y: None
        height: root.height-530
        orientation: 'horizontal'

        #Velocidade inicial (v0 (m/s))
        FloatLayout:
            Label:
                size_hint_y: None
                height: 40
                size_hint_x: None
                width: 30
                pos_hint: {'x': 0.1, 'y': 0.1}
                text: 'v0:'
            TextInput:
                id: txVel
                size_hint: (None, None)
                height: 35
                width: 45
                multiline: False
                hint_text: ''
                pos_hint: {'x': 0.3, 'y': 0.1}

       
        
        #Angulo de lancamento (Theta (graus))
        FloatLayout:
            Label:
                size_hint_y: None
                height: 40
                size_hint_x: None
                width: 30
                text: 'Theta:'
                pos_hint: {'x': 0.18, 'y': 0.1}
            TextInput:
                id: txAng
                size_hint: (None, None)
                height: 35
                width: 45
                multiline: False
                hint_text: ''
                pos_hint: {'x': 0.47, 'y': 0.1}        

        #Checkbox audio
        FloatLayout:
            Label:
                size_hint: (None, None)
                height: 40
                width:30
                text:'Audio:'
                pos_hint:{'x': 0.26, 'y':0.96}
            CheckBox:
                size_hint:(None, None)
                height: 40
                width: 30
                pos_hint:{'x': 0.48, 'y': 0.96}
                id: audio
                active: True
                on_active: root.audio()
 
    #Layout dos botoes
    FloatLayout:
        size_hint_y: None
        height: 80
        #Botao "lanca"
        Button:
            size_hint: (None, None)
            height: 40
            width: 120
            pos_hint: {'center_x': 0.18, 'center_y': 0.50}
            text: 'Lanca'
            on_press: root.LancarClick()
        
        #Botao "reinicio"    
        Button:
            size_hint: (None, None)
            height: 40
            width: 120
            pos_hint: {'center_x': 0.50, 'center_y': 0.50}
            text: 'Inicializa'
            on_press: root.inicializar()

        #Botao "sair"    
        Button:
            size_hint: (None, None)
            height: 40
            width: 120
            pos_hint: {'center_x': 0.82, 'center_y': 0.50}
            text: 'Sair'
            on_press: root.Sair()

            
#Modela o objeto da bola de basquete 
<Bola>:
    size: 50, 50
    canvas.after:
        Color:
            rgba:1, 1, 1, 1
        Ellipse:
            pos: self.pos
            size: self.size
            source:'./ball.png'


#Modela a cesta de basquete
<Cesta>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: (100, 100)
            source: './basket.png'
